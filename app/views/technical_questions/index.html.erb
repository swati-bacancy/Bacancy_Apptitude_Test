<%= render partial: "shared/header"%>
<div class="container">
  <h3>List Of Questions</h3>
  <table class="table table-striped">
    <thead>
      <tr>
      	<th>ID</th>
        <th>Question Description</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @technical_questions.each_with_index do |question,index| %>
        <tr>
        	<td><%= index + 1 %></td>
          <td width="200px"><%= raw(question.question_description) %></td>
          <td>
          	<%= link_to 'Edit', edit_technical_question_path(question), class:"btn" %> |
          	<%= link_to 'Show', technical_question_path(question), class:"btn" %> |
          	<%= link_to 'Delete', technical_question_path(question), method: :delete, data: { confirm: 'Are you sure want to delete?' }, class:"btn"%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="col-md-2">
    <%= link_to '+ Add a New Technical Question', new_technical_question_path, class: "btn btn-primary" %>
  </div>
        <%= link_to 'Back', root_path, class: 'btn btn-secondary mt-2 p' %>

</div>
