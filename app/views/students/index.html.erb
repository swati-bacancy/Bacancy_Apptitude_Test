<%= render partial: "shared/header"%>
<div class="container">
<h1> Student Index Page</h1>
<table class="table table-striped">
  <tr>
    <th>Name :</th>
    <th>Email :</th>
    <th>Course :</th>
    <th>Roll Number:</th>
    <th>Collage Name:</th>
    <th>Mobile Number:</th>
    <th colspan="3"> Action</th>
  </tr>
  <% @students.each do |student|%>
    <tr>
      <td><%= student.name %></td>
      <td><%= student.email %></td>
      <td><%= student.course %></td>
      <td><%= student.roll_number %></td>
      <td><%= student.collage_name %></td>
      <td><%= student.mobile_number %></td>
      <td><%= link_to 'Show',student_path(student) %></td>
      <td><%#= link_to 'Edit', edit_student_path(student) %></td>
      <td><%= link_to 'Delete', student_path(student), method: :delete, data: {confirm: 'Are You Sure You Want To Delete?'} %></td>
    </tr>
  <% end %>
</table>
</div>
