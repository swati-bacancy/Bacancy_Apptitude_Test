<div class="container">
  <%= form_tag questions_tests_path do %>
     <div class="row">
      <div class="col-sm-12">
        <h3 class="text-left">Add Question in Test</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <%= label_tag :Test%>
      </div>
      <div class="col-md-2">
        <%= collection_select(:test,:id, Test.all, :id, :name,{},  class: "form-control dropdown-toggle" ) %>
      </div>
      <div class="form-inline">
      <div class="col-md-12 form-group">
        <%= label_tag :Questions %>
        <%= collection_check_boxes :question, :question_ids, Question.all, :id, :question_description do |b| %>
        <div class="rows">
          <div class="col-sm-12">
            <%= b.check_box %>
            <%= b.label %>
          </div>
        </div>
        <% end %>
      </div>
      </div>
      <div class="col-md-12">
      <%= submit_tag "create", 'data-disable-with' => "Please wait..", class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
