<div class='google-btn'>
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in", omniauth_authorize_path(resource_name, provider), class: 'btn sign-btn', data: { turbo: false } %><br />
    <% end %>
  <% end %>
</div>  

<style>
  .google-btn{
    display: flex;
    align-items: center;
    justify-content: center;
    min-height:100vh;
  }
  .sign-btn{
    padding: 21px 55px 38px 55px !important;
  }
</style>
