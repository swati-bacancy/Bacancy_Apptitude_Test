<%= javascript_include_tag "questions", "data-turbolinks-track" => true  %>
<table>
  <tr class="que-option nested-fields form-inline">
    <td>
      <%= hidden_field_tag "question[options_attributes][#{f.index}][is_answer]", 'false' %>
      <%= check_box_tag "question[options_attributes][#{f.index}][is_answer]", value = "1",false, class: 'option-check' , checked: f.object.is_answer?%>
    </td>
    <td>
      <%= f.label :option, class: "mr-left mr-right" %>
      <%= f.text_field :option , class: "form-control mr-right", size:4, placeholder: 'A' %>
    </td>
    <td>
      <%= f.label :option_value, class: "mr-right" %>
      <%= f.text_field :option_value, class: "form-control mr-right", placeholder: 'Enter Option Value' %>
    </td>
    <td><%= link_to_remove_association "Remove", f%></td><br/>
  </tr>
</table>
<script>
  $( document ).ready(function() {
    $('button').attr('disabled', true);
    Bacancy_Apptitude_Test.Questions.form.singleCheck();
    Bacancy_Apptitude_Test.Questions.form.saveDisable();
  });
</script>
<style type="text/css">
  .mr-right{margin-right: 10px;}
  .mr-left{margin-left: 10px;}
</style>
