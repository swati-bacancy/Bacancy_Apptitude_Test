<%= render partial: "shared/header"%>
<div class="container">
  <h3 class="test-title-color"> List of Technical Tests</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Test Name</th>
        <th>Test Total Time</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @tests.each do |test| %>
        <% if test.is_technical %>
          <tr>
            <td><%= test.name %></td>
            <td><%= test.total_time %></td>
            <td>
              <%= link_to 'Show', test_path(test) %> |
              <%= link_to 'Edit', edit_test_path(test) %> |
              <%= link_to 'Delete', test_path(test), method: :delete, data: {confirm: 'Are You Sure You Want To Delete?'} %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <br/>
  <hr/>
   <h3 class="test-title-color"> List of Aptitude Tests</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Test Name</th>
        <th>Test Total Time</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @tests.each do |test| %>
        <% if !test.is_technical %>
          <tr>
            <td><%= test.name %></td>
            <td><%= test.total_time %></td>
            <td>
              <%= link_to 'Show', test_path(test) %> |
              <%= link_to 'Edit', edit_test_path(test) %> |
              <%= link_to 'Delete', test_path(test), method: :delete, data: {confirm: 'Are You Sure You Want To Delete?'} %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
    <%= link_to '+ Add a New Test', new_test_path, class: "btn btn-primary" %>
</div>
