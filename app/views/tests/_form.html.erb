<%= render partial: "shared/header"%>
<div class="container">
  <%= form_for @test do |f|%>
    <%= render "shared/error_messages", :target => @test %>
    <h3><%= @test.new_record? ? 'Add' : 'Edit' %> Test</h3>
    <div class="row">
      <div class="col-md-1">
        <%= f.label :name%>
      </div>
      <div class="col-md-5">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div><br />
    <div class="row">
      <div class="col-md-1">
        <%= f.label :total_time %>
      </div>
      <div class="col-md-5">
        <div class='input-group date' id='datetimepicker1'>
          <%= f.text_field :total_time, class: "form-control" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
      </div>
    </div><br />
    <div class="row">
      <div class="col-md-1">
        <%= f.label :is_technical, 'Technical' %>
      </div>
      <div class="col-md-5">
        <%= f.check_box :is_technical, {checked: @test.is_technical} %>
      </div>
    </div><br />
    <div class="row">
      <div class="col-md-6">
        <%= f.submit "Create Test", class: "btn btn-primary" %>
        <%= link_to 'Back', :back, class: "btn btn-primary" %>
      <div>
      </div>
    </div>
  <% end %>
</div>
<script type="text/javascript">
  $(function () {
    $('#datetimepicker1').datetimepicker({
      format: 'HH:mm'
    });
  });
</script>
